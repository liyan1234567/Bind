<UserControl x:Class="Binding.SilverlightControl1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="usercontrol" Background="White" Loaded="usercontrol_Loaded" Margin="-40,0,0,-190">
        <TextBox HorizontalAlignment="Left" Height="36" Margin="72,60,0,0" TextWrapping="Wrap" Text="{Binding Path=Name,Mode=TwoWay}" Name="li" VerticalAlignment="Top" Width="271"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="72,132,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="268,132,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</UserControl>
